@{
    ViewData["Title"] = "Home";
}

<div>
    <h1 class="display-4">Welcome to the Stock Management App!</h1>
    <p class="lead">This is a simple application to manage your stock levels efficiently.</p>
    <hr class="my-4">
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Stores</h4>
            </div>
            <div class="card-body">
                <p>Manage your store locations.</p>
                <a href="/Store" class="btn btn-primary">Go to Stores</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Items</h4>
            </div>
            <div class="card-body">
                <p>Manage the items in your inventory.</p>
                <a href="/Item" class="btn btn-success">Go to Items</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Stock Management</h4>
            </div>
            <div class="card-body">
                <p>Manage the stock levels of your items.</p>
                <a href="/Stock" class="btn btn-warning">Go to Stock Management</a>
            </div>
        </div>
    </div>
</div>
